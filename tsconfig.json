{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**/*"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "ES6",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "swc": true,
  }
}
